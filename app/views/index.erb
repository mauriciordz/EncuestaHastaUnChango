  </form>
<% else %>
  <form id="logout" action="/logout" method="get">
    <br><input type="submit" value="Logout!"> <br>
  </form>
  <form id="edit" action="/register_temp" method="get">
    <br><input type="submit" value="Edit User!"> <br>
  </form>
<% end %>

